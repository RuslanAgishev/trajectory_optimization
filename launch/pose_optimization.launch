<?xml version="1.0"?>

<launch>
    <arg name="rviz_config" default="cam_pose_opt"/>
    <arg name="rviz" default="false"/>

    <param name="use_sim_time" value="false"/>

    <node name="camera_pose_optimization" pkg="trajectory_optimization" type="camera_pose_optimization.py" output="screen"/>
<!--     <node name="camera_pose_optimization" pkg="trajectory_optimization" type="camera_pose_optimization_est.py" output="screen"/> -->

    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz" args="-d $(find trajectory_optimization)/config/$(arg rviz_config).rviz"/>
</launch>
