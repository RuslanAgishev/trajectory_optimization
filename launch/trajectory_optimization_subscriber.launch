<?xml version="1.0"?>

<launch>
    <arg name="rviz_config" default="traj_opt_sub"/>
    <arg name="rviz" default="false"/>
    <arg name="point_cloud_topic" default="/final_cost_cloud" />
    <arg name="input_path_topic" default="/path" />
    <arg name="output_path_topic" default="/path/optimized" />

<!--     <arg name="point_cloud_topic" default="/X1/local_map" /> -->
<!--     <arg name="input_path_topic" default="/X1/path" /> -->
<!--     <arg name="output_path_topic" default="/X1/path/optimized" /> -->

    <arg name="publish_rewards_cloud" default="false" />
    <param name="use_sim_time" value="false"/>

    <node name="traj_opt"
          pkg="trajectory_optimization"
          type="trajectory_optimization_sub.py" output="screen">

          <param name="point_cloud_topic" type="string" value="$(arg point_cloud_topic)" />
          <param name="input_path_topic" type="string" value="$(arg input_path_topic)" />
          <param name="publish_rewards_cloud" type="bool" value="$(arg publish_rewards_cloud)" />
          <param name="opt_steps" type="int" value="30" />
          <param name="smooth_weight" type="double" value="14.0" />
          <param name="length_weight" type="double" value="0.02" />
          <param name="lr_pose" type="double" value="0.1" />
          <param name="lr_quat" type="double" value="0.0" />

    </node>

    <node if="$(arg rviz)"
          name="rviz" pkg="rviz" type="rviz"
          args="-d $(find trajectory_optimization)/config/$(arg rviz_config).rviz"/>
</launch>
